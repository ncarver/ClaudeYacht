generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../data/yacht.db"
}

model Listing {
  id             Int              @id @default(autoincrement())
  linkUrl        String           @unique
  buildYear      Int?
  listingName    String?
  sellerName     String?
  sellerLocation String?
  imgUrl         String?
  manufacturer   String?
  boatClass      String?
  lengthInMeters Float?
  state          String?
  priceUSD       Int?
  dateLoaded     DateTime         @default(now())
  fileSource     String
  notes          String           @default("")
  thumbs         String? // "up", "down", or null
  favorite       Boolean          @default(false)
  properties     String           @default("{}")
  research       ListingResearch?
}

model ListingResearch {
  id             Int       @id @default(autoincrement())
  listingId      Int       @unique
  status         String    @default("pending") // "pending" | "running" | "complete" | "failed"
  errorMessage   String?
  listingSummary String?
  researchedAt   DateTime?
  listing        Listing   @relation(fields: [listingId], references: [id], onDelete: Cascade)
}

model ModelResearch {
  id           Int       @id @default(autoincrement())
  manufacturer String
  boatClass    String
  yearMin      Int?
  yearMax      Int?
  sailboatData String? // JSON string: SailboatDataSpecs
  reviews      String? // JSON string: ReviewResult[]
  forumUrl     String?
  forumName    String?
  researchedAt DateTime?

  @@unique([manufacturer, boatClass, yearMin, yearMax])
}

model SailboatDataMapping {
  id           Int     @id @default(autoincrement())
  searchKey    String  @unique // year-stripped listingName, e.g. "Dufour Classic 41"
  sailboatSlug String? // chosen slug, e.g. "dufour-classic-41" (null = "none of these")
  modelName    String? // display name from sailboatdata, e.g. "DUFOUR CLASSIC 41"
}
